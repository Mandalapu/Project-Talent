<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.projecttalentoriginal.PVItem1_Activity" >

     <TextView
       android:id="@+id/question_txt"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="51dp"
       android:gravity="center"
       android:text="@string/pvq"
       android:textSize="30sp" />
      <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
		android:layout_below="@+id/question_txt"
        android:contentDescription="@string/main"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button1"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_below="@+id/seek1"
        android:layout_centerHorizontal="true"
        android:background="#FFFFAA"
        android:layout_marginBottom="20dp"
        android:onClick="startRecording"
        android:radius="10dp"
        android:text="@string/record"
        android:textColor="#000000"
        android:textSize="26sp" />

    <SeekBar
        android:id="@+id/seek1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/question_txt"
        android:layout_below="@+id/imageView1"
        android:layout_margin="10dp"
        android:layout_marginTop="36dp"
        android:max="15"
        android:progress="0" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:text="@string/msg2"
        android:textColor="#FF0000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_alignRight="@+id/seek1"
        android:layout_below="@+id/message"
        android:layout_marginRight="31dp"
        android:background="#1E669B"
        android:radius="10dp"
        android:text="@string/button_str"
        android:textColor="#FFFFFF"
        android:textSize="26sp" />

</RelativeLayout>
